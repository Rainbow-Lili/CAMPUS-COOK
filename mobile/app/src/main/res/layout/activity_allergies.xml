                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_crustaces"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¦ CrustacÃ©s" />
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_oeufs"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥š Å’ufs" />
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_lait"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥› Lait" />
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sesame"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SÃ©same" />
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_soja"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soja" />
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_piment"
