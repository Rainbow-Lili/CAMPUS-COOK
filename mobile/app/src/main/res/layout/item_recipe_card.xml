<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_recipe"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/darkCard">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        
        <!-- Heart icon (top-left) -->
        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:background="@drawable/circle_white"
            android:src="@android:drawable/btn_star_big_off"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <!-- Titre -->
        <TextView
            android:id="@+id/tv_recipe_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sauce Arachide"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_heart" />
        
        <!-- Temps et difficulté -->
        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_title">
            
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45min"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />
            
            <TextView
                android:id="@+id/tv_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Moyen"
                android:drawableStart="@drawable/ic_difficulty_medium"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />
            
        </LinearLayout>
        
        <!-- Plus icon (bottom-right) -->
        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:background="@drawable/circle_white"
            android:src="@android:drawable/ic_input_add"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        
        <!-- Image avec overflow -->
        <ImageView
            android:id="@+id/iv_recipe_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/accueil"
            android:layout_marginEnd="-20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        
        <!-- Badge Allergie (visible si allergie détectée) -->
        <LinearLayout
            android:id="@+id/badge_allergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_allergy_bg"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toTopOf="@+id/iv_recipe_image">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Allergie"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
            
        </LinearLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</com.google.android.material.card.MaterialCardView>
