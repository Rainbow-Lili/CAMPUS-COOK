<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkBackground">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_boutique"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/darkCard"
        app:title="Ma Boutique"
        app:titleTextColor="@color/textPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Photo boutique -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/darkCard"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/iv_boutique_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_store" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_change_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="12dp"
                    android:text="ðŸ“· Changer"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/accentOrange" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Nom boutique -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom de la boutique"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/darkCard"
                app:hintTextColor="@color/textSecondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_boutique_nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:hint="Ex: Ã‰picerie Centrale" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/darkCard"
                app:hintTextColor="@color/textSecondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_boutique_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:hint="DÃ©crivez votre boutique..." />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Adresse -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adresse"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/darkCard"
                app:hintTextColor="@color/textSecondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_boutique_adresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:hint="Adresse de la boutique" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- TÃ©lÃ©phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃ©lÃ©phone"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="@color/darkCard"
                app:hintTextColor="@color/textSecondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_boutique_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:inputType="phone"
                    android:hint="+228 XX XX XX XX" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bouton sauvegarder -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_boutique"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ’¾ Sauvegarder"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/accentOrange" />

            <ProgressBar
                android:id="@+id/progress_boutique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
