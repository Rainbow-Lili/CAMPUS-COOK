<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/darkCard">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- Image du pack avec overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
            <ImageView
                android:id="@+id/iv_pack_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Image du pack" />
            
            <!-- Overlay gradient subtil -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay_bottom" />
                
        </FrameLayout>
        
        <!-- Contenu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/darkCard">
            
            <!-- Badge budget (500F, 1000F, etc.) -->
            <TextView
                android:id="@+id/tv_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000F"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_budget"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="8dp" />
            
            <!-- Nom du pack -->
            <TextView
                android:id="@+id/tv_pack_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pack Viande 1000F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:maxLines="2"
                android:ellipsize="end" />
            
            <!-- Description -->
            <TextView
                android:id="@+id/tv_pack_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mix viande et poisson pour varier les plaisirs"
                android:textSize="13sp"
                android:textColor="@color/textSecondary"
                android:maxLines="2"
                android:ellipsize="end" />
            
            <!-- Prix et stock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <!-- Prix -->
                <TextView
                    android:id="@+id/tv_pack_prix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1000 F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accentOrange" />
                
                <!-- Stock -->
                <TextView
                    android:id="@+id/tv_pack_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En stock: 12"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary" />
                
            </LinearLayout>
            
            <!-- Nom boutique -->
            <TextView
                android:id="@+id/tv_boutique_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ðŸª Boucherie du Campus"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />
            
            <!-- Bouton Ajouter au panier -->
            <Button
                android:id="@+id/btn_ajouter_panier"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:text="ðŸ›’ Ajouter au panier"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/button_orange_rounded" />
            
        </LinearLayout>
        
    </LinearLayout>
    
</com.google.android.material.card.MaterialCardView>
