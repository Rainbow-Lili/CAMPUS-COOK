  "8_CALCUL_COUT": {
    "description": "Exemple de calcul du coût total pour 1 personne",
    
    "EXEMPLE_RIZ_SAUCE_ARACHIDE": {
      "recette": "Riz sauce arachide",
      "nombrePersonnes": 1,
      "ingredients": [
        {
          "nom": "Riz",
          "quantite": 0.25,
          "unite": "kg",
          "prixUnitaire": 500,
          "cout": "0.25 × 500 = 125 FCFA"
        },
        {
          "nom": "Tomate",
          "quantite": 0.15,
          "unite": "kg",
          "prixUnitaire": 400,
          "cout": "0.15 × 400 = 60 FCFA"
        },
        {
          "nom": "Oignon",
          "quantite": 0.1,
          "unite": "kg",
          "prixUnitaire": 300,
          "cout": "0.1 × 300 = 30 FCFA"
        },
        {
          "nom": "Pâte d'arachide",
          "quantite": 0.15,
          "unite": "kg",
          "prixUnitaire": 800,
          "cout": "0.15 × 800 = 120 FCFA"
        },
        {
          "nom": "Viande de boeuf",
          "quantite": 0.2,
          "unite": "kg",
          "prixUnitaire": 2500,
          "cout": "0.2 × 2500 = 500 FCFA"
        }
      ],
      "coutTotal": "125 + 60 + 30 + 120 + 500 = 835 FCFA",
      "coutParPersonne": "835 FCFA / 1 = 835 FCFA",
      
      "pour_4_personnes": {
        "riz": "0.25 × 4 = 1 kg → 1 × 500 = 500 FCFA",
        "tomate": "0.15 × 4 = 0.6 kg → 0.6 × 400 = 240 FCFA",
        "oignon": "0.1 × 4 = 0.4 kg → 0.4 × 300 = 120 FCFA",
        "pate_arachide": "0.15 × 4 = 0.6 kg → 0.6 × 800 = 480 FCFA",
        "viande": "0.2 × 4 = 0.8 kg → 0.8 × 2500 = 2000 FCFA",
        "coutTotal": "500 + 240 + 120 + 480 + 2000 = 3340 FCFA",
        "coutParPersonne": "3340 / 4 = 835 FCFA"
      }
    }
  },

  "9_NOTES_UTILISATION": {
    "ordre_execution": [
      "1. POST /auth/register - Créer un utilisateur",
      "2. POST /auth/login - Se connecter et récupérer le token",
      "3. POST /origines - Créer Togo et Côte d'Ivoire (utiliser le token)",
      "4. POST /ingredients - Créer tous les ingrédients avec prix FCFA",
      "5. POST /recettes - Créer les recettes avec origine et utilisateur",
      "6. POST /recette-ingredients - Associer ingrédients aux recettes (quantités pour 1 personne)",
      "7. POST /etapes - Ajouter les étapes de préparation",
      "8. GET /recettes/public - Tester la liste des recettes",
      "9. GET /recettes/{id} - Tester les détails avec calcul de coût"
    ],
    
    "headers_requis": {
      "Content-Type": "application/json",
      "Authorization": "Bearer <votre_token_JWT>"
    },

    "outils_test": [
      "Postman",
      "Insomnia",
      "cURL",
      "Thunder Client (VS Code extension)",
      "REST Client (VS Code extension)"
    ]
  }
